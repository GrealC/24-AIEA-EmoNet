<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".item.ImageActivity">


    <ImageView
        android:id="@+id/image_album"
        android:layout_width="271dp"
        android:layout_height="140dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/delete_btn_1"
        android:layout_width="32dp"
        android:layout_height="31dp"
        android:layout_marginEnd="40dp"
        android:background="@mipmap/f1"
        android:backgroundTint="@color/background_org"
        app:layout_constraintBottom_toBottomOf="@+id/image_album"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/image_album"
        app:layout_constraintTop_toTopOf="@+id/image_album"
        app:layout_constraintVertical_bias="0.469" />
</androidx.constraintlayout.widget.ConstraintLayout>